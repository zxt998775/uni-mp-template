page {
  background-color: #f4f4f4;
}
.viewport {
  display: flex;
  flex-direction: column;
  height: 100%;
  background-image: url(https://pcapi-xiaotuxian-front-devtest.itheima.net/miniapp/images/order_bg.png);
  background-size: auto 420rpx;
  background-repeat: no-repeat;
}
.navbar {
  position: relative;
}
.navbar .title {
  height: 80rpx;
  display: flex;
  justify-content: center;
  align-items: center;
  font-size: 32rpx;
  font-weight: 500;
  color: #fff;
}
.navbar .back {
  position: absolute;
  height: 80rpx;
  width: 80rpx;
  left: 0;
  font-size: 40rpx;
  color: #fff;
  display: flex;
  justify-content: center;
  align-items: center;
}
.avatar {
  text-align: center;
  width: 100%;
  height: 260rpx;
  display: flex;
  flex-direction: column;
  justify-content: center;
  align-items: center;
}
.avatar .image {
  width: 160rpx;
  height: 160rpx;
  border-radius: 50%;
  background-color: #eee;
}
.avatar .text {
  display: block;
  padding-top: 20rpx;
  line-height: 1;
  font-size: 26rpx;
  color: #fff;
}
.form {
  background-color: #f4f4f4;
}
.form-content {
  margin: 20rpx 20rpx 0;
  padding: 0 20rpx;
  border-radius: 10rpx;
  background-color: #fff;
}
.form-item {
  display: flex;
  height: 96rpx;
  line-height: 46rpx;
  padding: 25rpx 10rpx;
  background-color: #fff;
  font-size: 28rpx;
  border-bottom: 1rpx solid #ddd;
}
.form-item:last-child {
  border: none;
}
.form-item .label {
  width: 180rpx;
  color: #333;
}
.form-item .account {
  color: #666;
}
.form-item .input {
  flex: 1;
  display: block;
  height: 46rpx;
}
.form-item .radio {
  margin-right: 20rpx;
}
.form-item .picker {
  flex: 1;
}
.form-item .placeholder {
  color: #808080;
}
.form-button {
  height: 80rpx;
}